<div class='toolbar'>
  <div class='box row'>
    <div>
      {{#link-to 'stories'}}
        <img class='toolbar__logo' src='/assets/icons/logo.png'>
      {{/link-to}}
    </div>

    <div class='box column o__vertical-align toolbar__name u__ml__15'>
      {{link-to 'Who Am I?' 'stories'}}
    </div>

    <div class='toolbar__spacer'></div>

    {{#if session.isAuthenticated}}
      <div class='box column o__vertical-align toolbar__create'>
        {{link-to 'Create story' 'stories.create'}}
      </div>
    {{/if}}

    <div class='box column o__vertical-align toolbar__signup'>
      {{#if session.isAuthenticated}}
        <a {{action 'signout'}}>Sign out</a>
      {{else}}
        {{link-to 'Sign up' 'signup'}}
      {{/if}}
    </div>
  </div>
</div>
<div class='background'>
  {{outlet}}
</div>