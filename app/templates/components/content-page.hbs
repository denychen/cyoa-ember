<div class='horizontally-align'>
  <div class='u__sp__1'></div>

  {{page.content}}
</div>

{{#if page.destinations}}
  <div class='u__sp__2'></div>

  <div class='box column o__right-align'>
    {{#each page.destinations as |destination|}}
      
      <div class='u__sp__1'></div>

      <div class='button destination' {{action 'loadNextPage' destination.pageId}}>
        {{destination.option}}
      </div>
    {{/each}}
  </div>
{{else}}
  <div class='u__sp__3'></div>
    
  <div class='box column o__right-align'>
    <div class='button destination' {{action 'loadNextPage'}}>
      Return to beginning
    </div>
  </div>
{{/if}}